//Complete the function
void deleteFromArray(int arr[], int n, int index){
    
    if(index<0||index>n-1)
    {
        cout<<"the index is not valid";
        return;
    }
    /*for(int i=n-1;i<=index;i--)
    {
        arr[i+1]=arr[i];
    }*/
    for (int i = index; i < n - 1; i++) {
    arr[i] = arr[i + 1];
  }
    arr[n-1]=0;
  //Your code here
}
